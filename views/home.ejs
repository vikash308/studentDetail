<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #4CAF50;
            color: white;
            padding: 15px 0;
            text-align: center;
            font-size: 24px;
        }

        .container {
            width: 80%;
            margin: auto;
            margin-top: 20px;
        }

        .post {
            background: white;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .username {
            font-weight: bold;
            color: #333;
        }

        .content {
            margin: 1rem;
            color: #555;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 16px;
            transition: background-color 0.3s ease;
            border: none;
        }

        .btn:hover {
            background-color: #45a049;
        }

        .action-btns button {
            margin-right: 10px;
        }

        form {
            display: inline-block;
        }
    </style>
</head>

<body>
    <header>
        My Post Feed
    </header>

    <div class="container">
        <!-- Create Post Button -->
        <form action="/posts/add">
            <button class="btn" style="margin-bottom: 20px; display: inline-block;">Create Posts</button>
        </form>

        <% for(let post of posts) { %>
            <div class="post">
                <div class="username">@<%= post.title %>
                </div>
                <div class="content">
                    <%= post.content %>
                </div>
                <div class="action-btns">
                    <a href="/post/<%= post.id %>" class="btn">See Post</a>
                    <a href="/post/<%= post.id %>/edit" class="btn">Edit Post</a>
                    <form action="/post/<%= post.id %>?_method=DELETE" method="POST">
                        <button class="btn" style="background-color: red;">Delete Post</button>
                    </form>

                </div>
            </div>
            <% } %>
    </div>
</body>

</html>